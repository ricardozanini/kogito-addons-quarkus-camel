{
  "id": "camelCustomFunction",
  "version": "1.0",
  "name": "Custom RPC example",
  "description": "This test a custom type can be added as addon in the classpath",
  "start": "start",
  "functions": [
    {
      "name": "callSoap",
      "type": "custom",
      "operation": "camel:direct:numberToWords"
    }
  ],
  "states": [
    {
      "name": "start",
      "type": "operation",
      "actions": [
        {
          "functionRef": {
            "refName": "callSoap",
            "arguments": {
              "body": "${ .number }"
            }
          }
        }
      ],
      "stateDataFilter": {
        "output": "${ .response }"
      },
      "end": true
    }
  ]
}